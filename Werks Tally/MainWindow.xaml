<Window x:Class="Werks_Tally.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Werks_Tally"
        mc:Ignorable="d"
        Title="WerksTally" SizeToContent="WidthAndHeight" KeyDown="MainWindow_KeyDown">
    <Grid Width="860" Height="435">
        <TextBox x:Name="WerksReader" Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}" Margin="10,42,418,40" TextWrapping="Wrap" AcceptsReturn="True" ToolTip="Paste the text generated by the Snipping Tool or PowerToys Text Extractor here. You can paste multiple blobs of text." VerticalScrollBarVisibility="Auto" PreviewKeyDown="WerksReader_PreviewKeyDown" TextChanged="WerksReader_TextChanged"/>
        <Label Content="Paste the text or image in here:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <DataGrid x:Name="WerksList" AutoGenerateColumns="False" Margin="460,42,0,40" HorizontalAlignment="Left" Width="390">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Item Name" 
                                    Binding="{Binding ItemName}"
                                    Width="*"/>
                <DataGridTextColumn Header="Completion Count" 
                                    Binding="{Binding CompletionCount}"
                                    Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="After checking the data, click save:" HorizontalAlignment="Left" Margin="460,399,0,0" VerticalAlignment="Top"/>
        <Button x:Name="SaveButton" Content="Save data" HorizontalAlignment="Left" Margin="669,401,0,0" VerticalAlignment="Top" Width="181" Height="23" Click="SaveButton_Click" ToolTip="The data is saved in a both a text and a csv file in the output folder. The text file is opened automatically."/>
        <Image Margin="10,408,834,11" Source="/mind-you-logo-favicon.png" Stretch="Fill"/>
        <Label Content="2024 v1.1" HorizontalAlignment="Left" Margin="26,403,0,0" VerticalAlignment="Top"/>
        <Image x:Name="imgPastedImage" HorizontalAlignment="Left" Height="24" Margin="191,10,0,0" VerticalAlignment="Top" Width="250" DragOver="Image_PreviewDragOver" Drop="Image_Drop" AllowDrop="True" MouseEnter="imgPastedImage_MouseEnter" MouseLeave="imgPastedImage_MouseLeave"/>
    </Grid>
</Window>
